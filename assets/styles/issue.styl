@import "variables"

body
  color #333
  background-color rgb(254, 254, 254)
  font-family "Helvetica Neue", Helvetica, Ubuntu, Arial, sans-serif

ul
  padding 0
  margin 0 0 3rem 2rem

article
  height 100%
  margin auto
  padding 15rem 2rem 0
  background-color #fff

  h2:first-type
    padding 0
    border-top 0

  h1
    position absolute
    top 0
    left 0
    width 100%
    height 10rem
    line-height 10rem
    margin-top 1rem
    padding .5rem 1rem
    font-size 4rem
    color font-color
    background-color bg-color
    text-align center
    overflow hidden

    em
      margin-left 6rem
      font-style normal
      font-size 1.8rem

  h2
    padding 1.5rem 0
    color #f04530
    font-size 2rem
    font-weight bold
    border-bottom 1px dashed
    text-transform uppercase

  li
    font-size 1.6rem
    margin-bottom 1rem
    line-height 2.6rem
    list-style-type square
    color #888

  a
    padding .5rem
    font-weight bold
    color #000
    text-decoration none

  a:hover
    color font-color
    background-color bg-color
    text-decoration none

    code
      color font-color
      background-color bg-color

  code
    font-family monospace, monospace
    font-size 85%
    padding .3em .5em
    line-height 1.5
    border-radius .3rem
    color #fff
    background-color #c2606f

@media screen and ( max-width 37.5rem )
  #article
    padding-top 6rem

    h1
      height 5rem
      line-height 5rem
      font-size 3rem
