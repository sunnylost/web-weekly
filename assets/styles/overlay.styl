#overlay
  display flex
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color #1d5a45
  transition all 1s

  .loading
    position relative
    width 15rem
    height 15rem
    margin auto
    font-size .5rem

    & div
      position absolute
      width 100%
      height 100%
      border 1em solid
      border-radius 50%
      animation ripple 1.5s 0s infinite cubic-bezier(0, 0, 0.54, 1.06)

      &:first-child
        border-color #e74c3c

      &:nth-child(2)
        border-color #f9c922
        animation-delay .2s

      &:last-child
        border-color #3498db
        animation-delay .4s

.loaded
  &, body
    height auto
    overflow auto

  #overlay
    opacity 0
    pointer-events none

    .loading > div
      animation none

@keyframes ripple {
  0% {
    transform : scale(.1);
    opacity : 1;
  }

  70% {
    opacity : .8;
  }

  100% {
    transform : scale(1);
    opacity : 0;
  }
}
